<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Easily</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/icons/bootstrap-icons.css" rel="stylesheet">

    <style>
        footer {
            position: fixed;
            height: 60px;
            bottom: 0;
            width: 100%;
            background-color: antiquewhite;
        }

        .welcome-container {
            height: 500px;
        }

        .skill {
            background-color: lightseagreen;
            display: inline-block;
            padding: 0px 10px;
            border-radius: 5px;
            margin: 1px 3px;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="#"><b>Easily</b></a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Welcome</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/jobs">Jobs</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Recruiters
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Action</a></li>
                            <li><a class="dropdown-item" href="#">Another action</a></li>
                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                    </li>

                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search by designation"
                        aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
    <div class="container">
        <%- body %>
    </div>

    <!-- Modal for Registration page -->

    <div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-primary-subtle">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Registration in 1 step</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <hr>
                <div class="modal-body ">
                    <form action="/register" method="post" class="m-3">
                        <div class="input-group m-1">
                            <div class="input-group-text">Name</div>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                        <div class="input-group m-1">
                            <div class="input-group-text">Email</div>
                            <input type="email" class="form-control" id="email" name="email">
                        </div>
                        <div class="input-group m-1">
                            <div class="input-group-text">Password</div>
                            <input type="password" class="form-control" id="password" name="password">
                        </div>
                        <button class="btn btn-primary m-3">Register</button>
                    </form>
                </div>
                <hr>
                <div class="modal-footer d-flex justify-content-between ">
                    <div>Already registered?
                        <button type="button" class="btn btn-success" data-bs-toggle="modal"
                            data-bs-target="#loginModal">
                            Login
                        </button>
                    </div>
                    <div>
                        <i class="bi bi-google"></i>
                        <i class="bi bi-facebook"></i>
                        <i class="bi bi-twitter"></i>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Modal for Login page -->

    <div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-success-subtle">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Login here</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <hr>
                <div class="modal-body ">
                    <form action="/login" method="post" class="m-3">

                        <div class="input-group m-1">
                            <div class="input-group-text">Email</div>
                            <input type="email" class="form-control" id="email" name="email">
                        </div>
                        <div class="input-group m-1">
                            <div class="input-group-text">Password</div>
                            <input type="password" class="form-control" id="password" name="password">
                        </div>
                        <button class="btn btn-primary m-3">login</button>
                    </form>
                </div>
                <hr>
                <div class="modal-footer d-flex flex-end ">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz4fnFO9gybBogGzjE76zVSCpIqNI8PixJ9sL1GxDzFlv6ZRfykG0KSYUN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>